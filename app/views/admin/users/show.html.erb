<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="user_show">
        <%= @user.user_name %>さんのページ
      </h5>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th><b>会員ID</b></th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th><b>ニックネーム</b></th>
            <td><%= @user.user_name %></td>
          </tr>
          <tr>
            <th><b>メールアドレス</b></th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th><b>自己紹介文</b></th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <th><b>プロフィール画像</b></th>
            <td><%= image_tag @user.get_profile_image(150,150) %></td>
          </tr>
          <tr>
            <th><b>ユーザーステータス</b></th>
            <td><%= @user.user_status %></td>
          </tr>
        </thead>
      </table>
        <div class="row">
          <div class="mx-auto">
            <%= link_to "編集する", edit_admin_user_path(@user.id) %>
          </div>
        </div>
    </div>
  </div>
</div>