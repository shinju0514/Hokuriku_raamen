<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h4 class="admin_post_index mt-2 mb-2">レビュー一覧</h4>
      <div class="sort_index">
        <h4>
        <%= link_to "新着順",admin_posts_path(created_at: "true") %>
        <%= link_to "評価順",admin_posts_path(rate: "true") %>
        </h4>
      </div>
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>店舗</th>
            <th>エリア</th>
            <th>評価</th>
            <th>投稿日</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= post.user.user_name %></td>
            <th><%= link_to admin_post_path(post.id) do %>
                <%= post.menu %></th>
                <% end %>
            <th>
              <% if post.shop == nil %>
                未登録
              <% else %>
              <%= post.shop.shop_name %>
              <% end %>
            </th>
            <th><%= post.area.prefecture %></th>
            <th><div id="star-rate-<%= post.id %>"></div>
                <script>
                $('#star-rate-<%= post.id %>').empty();
                $('#star-rate-<%= post.id %>').raty({
                  size: 20,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn :  '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= post.rate %>,
                });
                </script></th>
            <th><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>