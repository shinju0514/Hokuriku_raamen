<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="user_index">店舗一覧</h5>
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>作成日</th>
            <th>店舗名</th>
            <th>住所</th>
            <th>開店ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @shops.each do |shop| %>
          <tr>
            <th><%= shop.created_at.strftime("%Y-%m-%d %H:%M") %></th>
            <th><%= link_to admin_shop_path(shop.id) do %>
                <%= shop.shop_name %></th>
                <% end %>
            <th><%= shop.address %></th>
            <th><%= shop.shop_status %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @shops %>
    </div>
  </div>
</div>