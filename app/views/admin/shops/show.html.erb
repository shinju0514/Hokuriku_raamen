<div class="container">
  <div class="row" style = "margin-top: 50px">
    <div class="shop_show col-5">
      <div class="shop_show_area">
      <h4 class="shop mt-3">店舗 : <%= @shop.shop_name %></h4>
        <div class="shop_show_image">
          <%= image_tag @shop.get_shop_image(300,200),class: "shop_show_images" %>
        </div>
        <table class="table table-borderless">
          <thead>
            <tr>
              <th>営業時間</th>
              <td><%= @shop.bussiness_hour %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @shop.address %></td>
            </tr>
            <tr>
              <th>エリア</th>
              <td><%= @shop.area.prefecture %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= @shop.shop_status %></td>
            </tr>
            <tr>
              <th>投稿数</th>
              <td><%= @posts.count %>件</td>
            </tr>
          </thead>
        </table>
        <div class="row mx-auto">
          <div class="edit_botton d-block mx-auto mb-5">
            <%= link_to edit_admin_shop_path(@shop.id) do %>
              <button type="button" class="btn btn-outline-primary">編集する</button>
            <% end %>
          </div>
          <div class="delete-button d-block mx-auto mb-5">
            <%= link_to admin_shop_path(@shop.id), method: :delete, data: {confirm: "削除しますか？"} do %>
              <button type="button" class="btn btn-outline-danger">削除する</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-1">
    </div>
    <div class="col-6">
      <%= render 'user/shops/map_show', shop: @shop %>
    </div>
  </div>
  <div class="sort_index mt-5">
    <h4>
    <%= link_to "新着順",admin_shop_path(created_at: "true") %>
    <%= link_to "評価順",admin_shop_path(rate: "true") %>
    </h4>
  </div>
  <div class="post_wrapper" style = "margin-top: 50px">
    <%= render 'admin/posts/index', posts: @posts %>
  </div>
  <% paginate @posts %>
</div>