<h2>住所</h2>
<p><%= @post.address %></p>
<input id="address" type="textbox">
<input type="button" value="検索する" onclick="codeAddress()">
<!-- 下の1行を追加 -->
<div id="display"></div>

<div id='map',class='map'></div>

<style>
#map {
  height: 500px;
  width: 500px;
}
</style>

<script>
var infoWindow;
let map
let geocoder
// 下の1行を追加
const display = document.getElementById('display')

function initMap(){
      geocoder = new google.maps.Geocoder()

      map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: parseFloat("<%= @post.latitude %>"), lng: parseFloat("<%= @post.longitude %>")},
          zoom: 12,
      });
          var contentString = "<%= post.address %>";
          var marker = new google.maps.Marker({
              position:{lat: parseFloat("<%= @post.latitude %>"), lng: parseFloat("<%= @post.longitude %>")},
              map: map,
              title: contentString
          });
          infoWindow = new google.maps.InfoWindow({ // 吹き出しの追加
        content: '<div class="sample"><%= @post.menu %>,<%= @post.address %></div>' // 吹き出しに表示する内容
        });
       marker.addListener('click', function() { // マーカーをクリックしたとき
           infoWindow.open(map, marker); // 吹き出しの表示
          });
}

function markerEvent(i){
		var map;
		var marker = [];
		var data = [];
		var windows = [];
		var currentInfoWindow = null;
		marker[i].addListener('click', function() { // マーカーをクリックしたとき
		if (currentInfoWindow) {
		currentInfoWindow.close();
		}
		windows[i].open(map, marker[i]); // 吹き出しの表示
		currentInfoWindow = windows[i];
		});
}

function codeAddress(){
  let inputAddress = document.getElementById('address').value;

  geocoder.geocode( { 'address': inputAddress}, function(results, status) {
    if (status == 'OK') {
      map.setCenter(results[0].geometry.location);
      var marker = new google.maps.Marker({
          map: map,
          position: results[0].geometry.location
      });
      // 下の1行を追加
      display.textContent = "検索結果：" + results[ 0 ].geometry.location
    } else {
      alert('該当する結果がありませんでした：' + status);
    }
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API_KEY'] %>&callback=initMap" async defer></script>