<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="post_index">レビュー一覧</h5>
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>店舗</th>
            <th>エリア</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <th><%= post.user.user_name %></th>
            <th><%= link_to post_path(post.id) do %>
                <%= post.menu %></th>
                <% end %>
            <th><%= post.body %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>