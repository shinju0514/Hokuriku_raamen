<div class="container">
  <div class="row" style="margin-top: 50px">
    <div class="col-7">
      <div class="shop_name">
        <h4>店名 :
        <%= link_to shop_path(@shop.id) do %>
        <%= @post.shop.shop_name %>
        <% end %>
        </h4>
      </div>
      <%= image_tag @post.post_image,size:"400x300" %>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>タイトル</th>
            <td><%= @post.menu %></td>
          </tr>
          <tr>
            <th>本文</th>
            <td><%= @post.body %></td>
          </tr>
        </thead>
        <tbody>
        <div class="rate col-5">
          <tr>
            <th>評価</th>
            <td><div id="star-rate-<%= @post.id %>"></div>
                <script>
                $('#star-rate-<%= @post.id %>').raty({
                  size: 20,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn :  '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= @post.rate %>,
                });
                </script></td>
          </tr>
        </div>
          <tr>
            <th>いいね</th>
            <td><%= render 'user/favorites/favorite', post: @post %></td>
          </tr>
          <tr>
            <th>エリア</th>
            <td><%= @post.area.prefecture %></td>
          </tr>
        </tbody>
      </table>
      <div class="row" style="margin-left :100px">
        <!--他人の編集ページを表示させないようにする。-->
        <% if @user.id == current_user.id %>
        <div class="edit_botton mr-5">
          <%= link_to "編集する", edit_post_path(@post.id) %>
        </div>
        <div class="delete-button">
          <%= link_to "削除する", post_path(@post.id), method: :delete, data: {confirm: "削除しますか？"} %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      <h3 class="post_user"><b>投稿ユーザー</b></h3>
      <div class="user_name">
        <h4>
        <%= link_to user_path(@user.id) do %>
        <%= @post.user.user_name %>
        <% end %>
        </h4>
      </div>
    <div class="user_image">
      <%= image_tag @post.user.get_profile_image(150,150) %>
    </div>
    <div class="post_comment">
      <p>コメント件数:<%= @post.post_comments.count %></p>
      <% @post.post_comments.each do |post_comment| %>
        <p><%= image_tag post_comment.user.get_profile_image(80,80) %></p>
      <div class="user_post_comment col-8">
        <p><%= post_comment.comment %></p>
      </div>
        <%= post_comment.user.user_name %>
        <%= post_comment.created_at.strftime("%Y-%m-%d %H:%M") %>
        <% if post_comment.user == current_user %>
          <%= link_to "削除", post_post_comment_path(post_comment.post,post_comment), method: :delete, data: {confirm: "本当に削除しますか？"} %>
        <% end %>
      <% end %>
    </div>
    <div class="comment_send">
      <%= form_with model: [@post,@post_comment] do |f| %>
        <%= f.text_area :comment, size: "50x5", placeholder: "コメント欄" %></br>
        <%= f.submit "コメントを送信" %>
      <% end %>
    </div>
  </div>
</div>