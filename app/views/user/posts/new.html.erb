<div class="container">
  <div class="row" style="margin-top: 50px">
    <div class="col-12 mx-auto">
      <h4 class="post_new">レビュー投稿</h4>
      <%= form_with model:@post do |f| %>
      <div class="form_group col-8">
        <%= f.label :menu, "タイトル" %>
        <%= f.text_field :menu, class: "form-control" %>
      </div>

      <div class="form_group col-8">
        <%= f.label :post_image, "投稿画像" %></br>
        <%= f.file_field :post_image, accept: 'image/*' %>
      </div>

      <div class="form_group col-8">
        <%= f.label :body, "本文" %>
        <%= f.text_field :body, size: "40x10", class: "form-control" %>
      </div>
      
      <!-- 評価 -->
      <div class="form-group row" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :rate, id: :review_star %>
      </div>
      
      <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'post[rate]',
        half: true,
      });
      </script>  

      <div class="button_field">
        <%= f.submit "新規投稿" %>
      </div>
      <% end %>
    </div>
  </div>
</div>