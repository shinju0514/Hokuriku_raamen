<div class="container">
  <div class="row" style="margin-top: 20px">
    <div class="col-8">
      <div class="slide_image">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <% @random_posts.each_with_index do |post, i| %>
            <div class="carousel-item <%= "active"if i.zero? %>">
              <%= link_to post_path(post) do %>
                <%= image_tag post.post_get_image(600,450), class: 'img-field d-block mx-auto' %>
              <% end %>
            </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="mt-4">
        <div class="index_top">
          <ul class="nav nav-tabs" id="myTab"> 　<!--タブ-->
            <li class="active nav-home"><a href="#home" data-toggle="tab">レビュー新着</a></li>
            <li class="active nav-home"><a href="#profile" data-toggle="tab">いいね順</a></li>
            <li class="active nav-home"><a href="#messages" data-toggle="tab">人気順</a></li>
            <li><a href="#about" data-toggle="tab">コメント順</a></li>
          </ul>
          <div class="top_post tab-content col-4 mt-4">
            <div class="tab-pane active" id="home">
              <h4>レビュー新着! New!</h4>
              <%= render 'user/homes/post_index',posts: @posts %>
            </div>
            <div class="tab-pane" id="profile">
              <h4>いいねが多いレビュー</h4>
              <%= render 'user/homes/post_index',posts: @posts %>
            </div>
            <div class="tab-pane" id="messages">
              <h4>評価が高いレビュー</h4>
              <%= render 'user/homes/post_index',posts: @posts %>
            </div>
            <div class="tab-pane" id="about">
              <h4>コメント数が多いレビュー</h4>
              <%= render 'user/homes/post_index',posts: @posts %>
            </div>
          </div>
          <%= render 'user/shops/map_index',maps: @maps %>
        </div>
      </div>
    </div>
    <div class="search_index col-4 mb-4">
      <div class="search_post">
        <%= render 'user/homes/search_post' %>
        <%= render 'user/homes/search_shop' %>
      </div>
    </div>
  </div>
</div>