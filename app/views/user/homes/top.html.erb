<div class="container">
  <div class="row" style="margin-top: 20px">
    <div class="col-8">
      <div class="slide_image">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <% @random_posts.each_with_index do |post, i| %>
            <div class="carousel-item <%= "active"if i.zero? %>">
              <%= link_to post_path(post) do %>
                <%= image_tag post.post_get_image(600,450), class: 'img-field d-block mx-auto' %>
              <% end %>
            </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="mt-4">
        <span>
          <%= link_to posts_path,class: "btn btn-info" do %>
          <i class="fas fa-star"></i>投稿一覧
          <% end %>
        </span>
        <span class="ml-3">
          <%= link_to shops_path,class: "btn btn-primary" do %>
          <i class="fas fa-store-alt"></i>店舗一覧
          <% end %>
        </span>
        <span class="ml-3">
          <%= link_to map_shops_path,class: "btn btn-secondary" do %>
          <i class="fas fa-map-marker-alt"></i>ラーメンマップ
          <% end %>
        </span>
        <span class="ml-3">
          <%= link_to new_post_path,class: "btn btn-success" do %>
          <i class="fas fa-plus-circle"></i>投稿する!
          <% end %>
        </span>
        <div class="index_top">
          <h4 class="mt-4">レビュー新着！　New!!</h4>
          <div class="top_post col-4">
            <%= render 'user/homes/post_index',posts: @posts %>
          </div>
          <%= render 'user/shops/map_index',maps: @maps %>
        </div>
      </div>
    </div>
    <div class="search_index col-4 mb-4">
      <div class="search_post">
        <%= render 'user/homes/search_post' %>
        <%= render 'user/homes/search_shop' %>
      </div>
    </div>
  </div>
</div>