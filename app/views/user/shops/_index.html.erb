<h4 class="shop">店舗一覧</h4>
  <% shops.each do |shop| %>
  <div class="shop_index">
    <div class="shop_title">
      <h5>店名:
          <%= link_to shop_path(shop.id) do %>
          <%= shop.shop_name %></h5>
          <% end %>
    </div>
    <div class="shops_show">
      <table class="table table-borderless">
        <thead>
          </tr>
          <tr>
            <td><%= image_tag shop.get_shop_image(300,200) %></td>
          </tr>
          <tr>
            <th>営業時間</th>
            <td><%= shop.bussiness_hour %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= shop.address %></td>
          </tr>
          <tr>
            <th>エリア</th>
            <td><%= shop.area.prefecture %></td>
          </tr>
        </thead>
      </table>
    </div>
  <% end %>
  </div>