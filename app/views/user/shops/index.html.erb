<div class="container">
  <h2 class="shop">店舗一覧</h2>
  <div class="index_icon">
    <span>
      <%= link_to posts_path,class: "btn btn-info" do %>
      <i class="fas fa-star"></i>投稿一覧
      <% end %>
    </span>
    <span class="ml-3">
      <%= link_to shops_path,class: "btn btn-primary" do %>
      <i class="fas fa-store-alt"></i>店舗一覧
      <% end %>
    </span>
    <span class="ml-3">
      <%= link_to map_posts_path,class: "btn btn-secondary" do %>
      <i class="fas fa-map-marker-alt"></i>マップから投稿を見る
      <% end %>
    </span>
    <span class="ml-3">
      <%= link_to new_shop_path,class: "btn btn-warning" do %>
      <i class="fas fa-store"></i>店舗新規登録
      <% end %>
    </span>
  </div>
  <div class="sort_index">
    <h4>
    <%= link_to "新着順",shops_path(created_at: "true") %>
    </h4>
  </div>
  <div class="row" style = "margin-top: 50px">
    <%= render 'user/shops/index', shops: @shops %>
  </div>
  <%= paginate @shops %>
</div>
