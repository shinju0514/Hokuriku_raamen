<% if user_signed_in? %>
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'content' %>
      <%= select_tag 'model', options_for_select({ "Post" => "post", "Shop" => "shop" }) %>
      <%= select_tag 'method', options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
      <%= submit_tag '検索' %>
    <% end %>
<% end %>
<% if @model == 'post' %>
  <h3>検索ワード：<%= @content %></h3>
  <%= render 'user/posts/index', posts: @records %>
<% else @model == 'shop' %>
  <h3>検索ワード：<%= @content %></h3>
    <%= render 'user/shops/index', shops: @records %>
<% end %>